@{
}
<div class="modal fade" id="AdvertGallery" role="dialog">
    <div class="modal-dialog" style="margin-left:16em;">
        <!-- Modal content-->
        <div class="modal-content" style="width:48.5em;">
            <div class="modal-body">
                @foreach (var s in Model)
                {
                    <img src=@Html.DisplayTextFor(model => s.ImgSrc) style="height:140px;width:180px;padding-bottom:0.2em;" class="high">
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-block" style="background-color:grey;font-size:0.5em;width:8em;margin-right:2em;color:white;" data-dismiss="modal">Avbryt</button>
                <button type="submit" class="btn btn-block" style="font-size:0.5em;width:8em;background-color:red;color:white;margin-right:46em;margin-bottom:1em;" onclick="deletSponsorImage()">Tabort bild</button>
                <form class="mt-2" >
                    <label class="btn btn-block" for="UploadAdd" style="font-size:0.5em;width:10em;margin-left:10em;background-color:#0293fc;color:white;">
                        Ladda upp fil
                    </label>
                    @Html.HiddenFor(model => new AdvertImageGallery().File)
                    @Html.EditorFor(model => new AdvertImageGallery().File, new { htmlAttributes = new { id = "UploadAdd", accept = ".jpg,.jpeg,.png", type = "file", style = "display:none;", name = "file", onchange= "setSponsorImage()" } })
                </form>
                <button type="submit" class="btn btn-block" style="font-size:0.5em;width:6em;background-color:#0293fc;color:white;" onclick="pickSponsorImage(attribute)" data-dismiss="modal">Välj</button>
            </div>
        </div>
    </div>
</div>