<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ContetManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="height:100%;">
    <header>
        <div class="navbar navbar-expand-sm" style="background-color:#292a2c;">
                <div class="row mw-100 mh-100">
                        <a class="navbar-brand p-2" style="margin-left:2vw;" asp-area="" asp-controller="Home" asp-action="Index">
                            <img height="35" width="200" src="~/Content/Images/header-logo.png" alt="Kan ej ladda bilden" />
                        </a>
                        <img style="margin-top:0.7vw;margin-left:32vw;margin-right:0.5vw;" height="20" width="20" src="~/Content/Icons/amv-symbol.png" alt="Kan ej ladda bilden" />
                        <p style="color:#8b8c8e;margin-top:0.6vw;">CMS</p>
                </div>
        </div>
    </header>
    <div class="row mw-100 mh-100">
        <div class="col-auto" style="background-color:#3f4044;">
            <div class="row" style="height:2vw;border-bottom:1px solid #5b5c60;">
                <div class="col" style="padding-left: 1.2vw;">
                        <a class="nav-link text-white" style="font-size:0.6vw;" asp-area="" asp-controller="Home" asp-action="Content">Innehåll</a>
                </div>
            </div>
            <div class="row" style="height:2vw;border-bottom:1px solid #5b5c60">
                <div class=" col" style="padding-left: 1.2vw;">
                    <a class="nav-link text-white" style="font-size:0.6vw;" asp-area="" asp-controller="Home" asp-action="Index">GolfEvent</a>
                </div>
            </div>
            <div class="row" style="height:2vw;border-bottom:1px solid #5b5c60">
                <div class=" col" style="padding-left: 1.2vw;">
                    <a class="nav-link text-white" style="font-size:0.6vw;" asp-area="" asp-controller="Home" asp-action="Index">Annonser</a>
                </div>
            </div>

            <div class="row" style="height:2vw;border-bottom:1px solid #5b5c60">
                <div class=" col" style="padding-left: 1.2vw;">
                    <a class="nav-link text-white" style="font-size:0.6vw;" asp-area="" asp-controller="Home" asp-action="Index">Logga ut</a>
                </div>
            </div>
            <div class="row" style="height:2vw;border-bottom:1px solid #5b5c60">
                <div class=" col" style="padding-left: 1.2vw;">
                    <a class="nav-link text-white" style="font-size:0.6vw;" asp-area="" asp-controller="Login" asp-action="Login">Logga in</a>
                </div>
            </div>
        </div>
            <div class="col-8">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
