@model UnderPage

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-7">
            <div class="container text-center align-content-center">
                @using (Html.BeginForm("Create", "UnderPage", FormMethod.Post,
          new { enctype = "multipart/form-data" }))
                {
                    <div style="height:0.8vw;"></div>
                    <div class="row p-0">
                        <h4>Skapa ny undersida</h4>
                    </div>
                    <hr />
                    <div class="p-2 mw-100 mh-100">
                        @*<div class="form-group">
                                <div class="row">
                                    <label class="d-block" style="font-size:0.5vw;"><b>Högerboxar:</b></label>
                                    @Html.DropDownListFor(m => m.AmmountOfAdverts, Enumerable.Range(1, 4).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
                                </div>
                            </div>*@
                        <div class="form-group p-0 text-left" style="font-size:0.4vw;">
                            <div class="row">
                                <div class="col-6">
                                    <label class="d-block" style="font-size:0.5vw;"><b>Rubrik:</b></label>
                                    <input asp-for="@Model.PageTitle" class="form-control" style="font-size:0.5vw;height:1.2vw;width:10.5vw;background-color:white;border:1px solid lightgray;">
                                    <span asp-validation-for="@Model.PageTitle" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    @Html.HiddenFor(model => model.Id)
                                    <label class="d-block" style="font-size:0.5vw;"><b>Länktext i meny:</b></label>
                                    <input asp-for="LinkTitle" class="form-control" style="font-size:0.5vw;width:10.5vw;height:1.2vw;" required />
                                    <span asp-validation-for="LinkTitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mh-100 mw-100">
                                <div class="col-6">
                                    <div class="form-group" style="text-align:left;font-size:0.5vw;">
                                        <label class="d-block" style="font-size:0.5vw;"><b>Splash bild</b></label>
                                        @Html.HiddenFor(model => model.underPageImgSource)
                                        @Html.HiddenFor(model => model.underPageImgSource, new { HtmlAttributes = new { id = "imgsrc" } })
                                        @if(ViewData["Message"] != null){
                                            <p style="color:red;font-size:0.5em;">@ViewData["Message"].ToString()</p>
                                        }
                                        <img class="d-block" id="underpageId" src="@Model.underPageImgSource" width="240" height="140" style="border:1px solid gray;" />
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#PageGallery" style="font-size:0.7em;width:8em;height:3.5em;">välj bild</button>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group text-left">
                                        @Html.HiddenFor(model => model.HeaderContent)
                                        <label style=" width: 100%; text-align: right;">
                                            <b class="d-block" style="font-size:0.5vw;margin-top:0.2vw;">Välj undermeny:</b>
                                            @Html.DropDownList("selecterDropDownValue", (SelectList)ViewData["HeaderTheme"], new { style = "width:3.8vw;height:1vw;font-size:0.5vw;", @onchange = "submitform();" })
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div style="height:3vw;"></div>
                        <div class="text-left p-2" style="font-size:0.5vw;">
                            <label class="control-label text-left" style="font-weight:bold;">Brödtext: </label>
                            @Html.HiddenFor(text => text.Id)
                            @Html.TextAreaFor(model => model.TextContent, new { id = "editor2", style = "font-size:2em;" })
                        </div>
                    </div>
                    <h6 class="text-left">Metainformation</h6>
                    <hr />
                    <div class="form-group p-0 text-left">
                        <div class="row">
                            <div style="height:1vw;"></div>
                            <b style="font-size: 0.5vw;" class="pl-3 pr-1">Publik:</b>  @Html.CheckBoxFor(m => m.IsPublic)
                            <b style="font-size: 0.5vw;" class="pl-3 pr-1">Visa eventlista:</b>  @Html.CheckBoxFor(m => m.ShowEventModul)
                            <b style="font-size: 0.5vw;" class="pl-3 pr-1">Visa kontaktformulär:</b>  @Html.CheckBoxFor(m => m.ShowFormModul)
                            <b style="font-size: 0.5vw;" class="pl-3 pr-1">Visa Anmälningsformulär:</b>  @Html.CheckBoxFor(m => m.ShowEmailFormModul)
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6 text-left">
                            <button type="button" class="btn text-white p-0 text-center" onclick="location.href='@Url.Action("Index", "UnderPage")'" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#8c8c8c;">Avbryt</button>
                        </div>
                        <div class="col-6 text-right">
                            <button type="submit" class="btn text-white p-0 text-center" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;">Bekräfta</button>
                        </div>
                    </div>
                    <div style="height:2.5vw;"></div>
                }
            </div>

            </div>
        </div>
        <div class="col-auto"></div>
    </div>
<div>

</div>
@await Component.InvokeAsync("PageImageGallery")