@model UserModel
@{
}
<div id="login">
    <div style="height:4vw;"></div>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6"  style="background-color:#3f4044;border:2px solid #cab290;">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="" method="post">
                        <div style="height:0.5vw;"></div>
                        <div class="row">
                            <img style="margin-left:2.5vw;margin-top:0.4vw;margin-right:0.5vw;" height="20" width="20" src="~/Content/Icons/amv-symbol.png" />
                            <h3 class="text-white">Mer än bara golf</h3>
                        </div>
                        <div style="height:1.5vw;"></div>
                        <div class="form-group text-white">
                            <label for="username">Användarnamn:</label><br>
                            <input type="text" name="username" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-white">Lösenord:</label><br>
                            <input type="text" name="password" id="password" class="form-control">
                        </div>
                        <div style="height:0.5vw;"></div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn text-white" style="background-color:#0293fc;" value="Logga in">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

