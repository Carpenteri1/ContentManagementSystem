@model ContentManagement.Models.Adverts.AdvertsModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-7">
            <div class="container text-center align-content-center">
                @using (Html.BeginForm("Create", "Adverts", FormMethod.Post,
new { enctype = "multipart/form-data" }))
                {

                    @Html.HiddenFor(model => model.Id)
                    <div style="height:0.8vw;"></div>
                    <div class="row p-0">
                        <h4>Skapa ny annons</h4>
                    </div>
                    <hr />
                    <div class="p-2 mw-100 mh-100">
                        <div class="form-group p-0 text-left" style="font-size:0.4vw;">
                            <div class="row">
                                <div class="col-6">
                                    <label class="d-block" style="font-size:0.5vw;"><b>Rubrik:</b></label>
                                    <input asp-for="@Model.LinkTitle" class="form-control" style="font-size:0.5vw;height:1.2vw;width:10.5vw;background-color:white;border:1px solid lightgray;" required>
                                    <span asp-validation-for="@Model.LinkTitle" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    @Html.HiddenFor(model => model.Id)
                                    <label class="d-block" style="font-size:0.5vw;"><b>Länktext i meny:</b></label>
                                    <input asp-for="LinkTo" class="form-control" style="font-size:0.5vw;width:10.5vw;height:1.2vw;" required>
                                    <span asp-validation-for="LinkTo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mh-100 mw-100">
                                <div class="col-6">
                                    <div class="form-group" style="text-align:left;font-size:0.5vw;">
                                        <label class="d-block" style="font-size:0.5vw;"><b>Annons bild</b></label>
                                        @Html.HiddenFor(model => model.ImgUrl)
                                        @Html.HiddenFor(model => model.ImgUrl, new { HtmlAttributes = new { id = "AdvertImg" } })
                                        <img class="d-block" id="advertImg" src="@Model.ImgUrl" width="240" height="140" style="border:1px solid gray;" />
                                        <button type="button" class="btn btn-primary p-0" data-toggle="modal" data-target="#AdvertGallery" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;">välj bild</button>
           
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group text-left">
                                        @Html.HiddenFor(model => model.TypeOfAdd)
                                        <label style=" width: 100%; text-align: right;">
                                            <b class="d-block" style="font-size:0.5vw;margin-top:0.2vw;height:1.8em;">Välj reklam typ:</b>
                                            @Html.DropDownList("selecterDropDownValue", (SelectList)ViewData["TypeOfAd"], new { style = "width:5vw;height:0.9vw;font-size:0.5vw;", @onchange = "submitform();" })
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div style="height:1.5vw;"></div>
                    <h6 class="text-left">Metainformation</h6>
                    <hr />
                    <div class="row">
                        <b style="font-size: 0.5vw;" class="pl-3 pr-1">Aktiv:</b> @Html.CheckBoxFor(m => m.isActive)
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6 text-left">
                            <button type="button" class="btn text-white p-0 text-center" onclick="location.href='@Url.Action("Index", "Adverts")'" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#8c8c8c;">Avbryt</button>
                        </div>
                        <div class="col-6 text-right">
                            <button type="submit" class="btn text-white p-0 text-center" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;">Bekräfta</button>
                        </div>
                    </div>
                    <div style="height:2.5vw;"></div>
                }

            </div>
            </div>
            <div class="col-auto"></div>
        </div>
    </div>
@await Component.InvokeAsync("AdvertsImageGallery")
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

