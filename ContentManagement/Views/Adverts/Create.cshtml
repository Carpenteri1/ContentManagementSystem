@model AdvertsModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-7">
            <div style="height:1.5vw;"></div>
            <h4>Skapa ny annons</h4>
            <hr />
            <form id="CreateSponsorForm">
                @Html.HiddenFor(model => model.Id, new { id = "hiddeforAdvertId" })
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="p-2 mw-100 mh-100">
                    <div class="form-group p-0 text-left" style="font-size:0.4vw;">
                        <div class="row">
                            <div class="col-6">
                                <label asp-for="LinkTitle" class="control-label" style="font-size: 0.5vw; width: 11vw; height: 0em; font-weight: bold;">Länktext i meny: </label>
                                <input asp-for="LinkTitle" class="form-control" style="font-size: 0.5vw; width: 20em; height: 1vw; border: 1px solid lightgray;" id="AdvertLinkTitle" />
                                <span asp-validation-for="LinkTitle" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="LinkTo" class="control-label" style="font-size: 0.5vw; width: 6vw; height: 0em;margin-left:0.5em;font-weight:bold;">Sökväg till sidan: </label>
                                <input asp-for="LinkTo" class="form-control" style="width:24em;height:1vw;resize:none;font-size:0.5vw;" id="AdvertLinkTo" />
                                <span asp-validation-for="LinkTo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group p-0">
                        <div class="row">
                            <div class="col-6">
                                <div class="text-left">
                                    <label style=" width: 100%;">
                                        <b class="d-block" style="font-size:0.5vw;margin-top:0.2vw;">Välj reklam typ:</b>
                                        @Html.DropDownList("selecterDropDownValue", (SelectList)ViewData["TypeOfAd"], new { style = "width:3.8vw;height:1vw;font-size:0.5vw;", id = "AdvertSeletecDropDown", @onchange = "submitform();" })
                                    </label>
                                </div>
                            </div>
                            <div class="col-6"></div>
                        </div>
                    </div>
                    <div style="height:1.5vw;"></div>
                    <div class="form-group" style="text-align:left;font-size:0.5vw;">
                        <label class="d-block" style="font-size:0.5vw;"><b>Splash bild</b></label>
                        <img class="d-block" id="SponsorImage" src="" width="140" height="80" alt="välj en bild" />
                        <button type="button" class="btn btn-primary p-0" data-toggle="modal" data-target="#AdvertGallery" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;">välj bild</button>
                    </div>
                </div>
                <div style="height:1.5vw;"></div>
                <h6 class="text-left">Metainformation</h6>
                <hr />
                <div class="row">
                    <b style="font-size: 0.5vw;" class="pl-3 pr-1">Annonsen aktiv:</b>  @Html.CheckBoxFor(m => m.isActive, new { id = "AdvertIsActive" })
                </div>
                <hr />
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <button type="button" class="btn text-white p-0 text-center" onclick="location.href='@Url.Action("Index", "Adverts")'" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#8c8c8c;">Avbryt</button>
                        </div>
                        <div class="col-6 text-right">
                            <button type="button" class="btn text-white p-0 text-center" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;" onclick="postSponsorImage('/Adverts/Create')">Bekräfta</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-auto"></div>
    </div>
</div>
@await Component.InvokeAsync("DropDownAddsImageGallery")
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}