@model ContentManagement.Models.Adverts.AdvertsModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-7">
            <div style="height:1.5vw;"></div>
            <h4>Skapa ny annons</h4>
            <hr />
            @using (Html.BeginForm("Create", "Adverts", FormMethod.Post,
new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => model.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group p-0">
                    <label asp-for="LinkTitle" class="control-label" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;font-weight:bold;"></label>
                    <input asp-for="LinkTitle" class="form-control" style="font-size: 0.5vw; width: 16vw; height: 1.2vw; border: 1px solid lightgray;" />
                    <span asp-validation-for="LinkTitle" class="text-danger"></span>
                </div>
                <div class="form-group p-0">
                    <label asp-for="LinkTo" class="control-label" style="font-size: 0.5vw; width: 6vw; height: 1.2vw;font-weight:bold;"></label>
                    <input asp-for="LinkTo" class="form-control" style="width:6vw;height:1vw;resize:none;font-size:0.5vw;" />
                    <span asp-validation-for="LinkTo" class="text-danger"></span>
                </div>
                <div class="form-group p-0">
                    <label asp-for="File" class="control-label" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;font-weight:bold;"></label>
                    <img src="" height="140" width="240" class="d-block" />
                    <input asp-for="File" style="width:18vw;height:2.8vw;resize:none;font-size:0.5vw;">
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <div class="form-group p-0 text-left">
                    <div class="row">
                        <div class="col-4">
                            <label>
                                <b style="font-size: 0.5vw;" class="d-block">Annonsen aktiv:</b>  @Html.CheckBoxFor(m => m.isActive, false)
                            </label>
                        </div>
                        <div class="col-8">
                            <label style=" width: 100%;">
                                <b class="d-block" style="font-size:0.5vw;margin-top:0.2vw;">Välj reklam typ:</b>
                                @Html.DropDownList("selecterDropDownValue", (SelectList)ViewData["TypeOfAd"], new { style = "width:3.8vw;height:1vw;font-size:0.5vw;", @onchange = "submitform();" })
                            </label>
                        </div>
                    </div>
                </div>
                <div style="height:1.5vw;"></div>
                <hr />
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <button type="button" class="btn text-white p-0 text-center" onclick="location.href='@Url.Action("Index", "Events")'" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#8c8c8c;">Avbryt</button>
                        </div>
                        <div class="col-6 text-right">
                            <button type="submit" class="btn text-white p-0 text-center" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;">Bekräfta</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-auto"></div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}