@model AdvertsModel
@{
    ViewData["Title"] = Model.LinkTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-7">
            <div class="container text-center align-content-center">
                @using (Html.BeginForm("Edit", "Adverts", FormMethod.Post,
             new { enctype = "multipart/form-data" }))
                {
                    <div style="height:0.8vw;"></div>
                    <div class="row p-0">
                        <h4>Redigera annons @Model.LinkTitle</h4>
                    </div>
                    <hr />
                    <div class="p-2 mw-100 mh-100">
                        <div class="form-group p-0 text-left" style="font-size:0.4vw;">
                            <div class="row">
                                <div class="col-6">
                                    <label class="d-block" style="font-size:0.5vw;font-weight:bold;">Rubrik</label>
                                    @Html.HiddenFor(model => model.Id)
                                    @Html.EditorFor(model => model.LinkTitle, new { HtmlAttributes = new { @class = "form-control", style = "font-size:0.5vw;height:1.2vw;width:10vw;background-color:white;border:1px solid lightgray;" } })
                                </div>
                                <div class="col-6">
                                    <label class="d-block" style="font-size:0.5vw;font-weight:bold;">Länkar till: </label>
                                    <input asp-for="LinkTo" class="form-control" style="font-size:0.5vw;height:1.2vw;width:10.5vw;background-color:white;border:1px solid lightgray;">
                                    <span asp-validation-for="LinkTo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group p-0 ">
                            <div class="row text-left">
                                <div class="col-6 ">
                                    <label>
                                        <b style="font-size: 0.5vw;" class="d-block">Annonsen aktiv:</b>  @Html.CheckBoxFor(m => m.isActive)
                                    </label>
                                </div>
                                <div class="col-6">
                                    <label style=" width: 100%;">
                                        <b class="d-block" style="font-size:0.5vw;margin-top:0.2vw;">Välj reklam typ:</b>
                                        @Html.DropDownList("selecterDropDownValue", (SelectList)ViewData["TypeOfAd"], new { style = "width:3.8vw;height:1vw;font-size:0.5vw;", @onchange = "submitform();" })
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div style="height:1.5vw;"></div>
                        <div class="form-group" style="text-align:left;font-size:0.5vw;">
                            <label class="d-block" style="font-size:0.5vw;"><b>Splash bild</b></label>
                            @Html.HiddenFor(model => model.ImgUrl)
                            <img class="d-block" src=@Html.DisplayTextFor(model => model.ImgUrl) alt="bilden kunde ej laddas" width="140" height="80" />
                            @Html.HiddenFor(model => model.File)
                            @Html.EditorFor(model => model.File)
                        </div>
                    </div>
                    <div style="height:2.5vw;"></div>
                    <hr />
                    <div class="row">
                        <div class="col-6 text-left">
                            <button type="button" class="btn text-white p-0 text-center" onclick="location.href='@Url.Action("Index", "Adverts")'" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#8c8c8c;">Avbryt</button>
                        </div>
                        <div class="col-6 text-right">
                            <button type="submit" class="btn text-white p-0 text-center" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;">Bekräfta</button>
                        </div>
                    </div>
                    <div style="height:2.5vw;"></div>

                }

            </div>
        </div>
        <div class="col-auto"></div>
    </div>
</div>
