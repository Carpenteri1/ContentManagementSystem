@model ContentManagement.Models.Adverts.AdvertsModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-7">
            <div class="container text-center align-content-center">
                @using (Html.BeginForm("Edit", "Adverts", FormMethod.Post,
            new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(model => model.Id)
                    <div style="height:0.8vw;"></div>
                    <div class="row p-0">
                        <h4>Redigera annons @Model.LinkTitle</h4>
                    </div>
                    <hr />
                    <div class="p-2 mw-100 mh-100">
                        <div class="form-group p-0 text-left" style="font-size:0.4vw;">
                            <div class="row">
                                <div class="col-6">
                                    <label class="d-block" style="font-size:0.5vw;"><b>Rubrik:</b></label>
                                    <input asp-for="LinkTitle" class="control-label"/>
                                    <span asp-validation-for="LinkTitle" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="LinkTo" class="control-label"></label>
                                    <input asp-for="LinkTo" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="File" class="control-label"></label>
                            <img class="d-block" src=@Html.DisplayTextFor(model => model.ImgUrl) alt="bilden kunde ej laddas" width="240" height="140" />
                            <input asp-for="File"/>
                        </div>
                        <div style="height:1.5vw;"></div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="isActive" /> @Html.DisplayNameFor(model => model.isActive)
                            </label>
                        </div>
                        <div style="height:3vw;"></div>
                        <div class="form-group p-0 mw-100 mh-100" style="font-size:0.5vw;">
                            @Html.HiddenFor(model => model.TypeOfAdd)
                            <label style=" width: 100%; text-align: right;">
                                <b class="d-block" style="font-size:0.5vw;margin-top:0.2vw;">Välj undermeny:</b>
                                @Html.DropDownList("selecterDropDownValue", (SelectList)ViewData["TypeOfAd"], new { style = "width:3.8vw;height:1vw;font-size:0.5vw;", @onchange = "submitform();" })
                            </label>
                        </div>
                    </div>
                    <div style="height:2.5vw;"></div>
                    <hr />
                    <div class="row">
                        <div class="col-6 text-left">
                            <button type="button" class="btn text-white p-0 text-center" onclick="location.href='@Url.Action("Index", "Adverts")'" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#8c8c8c;">Avbryt</button>
                        </div>
                        <div class="col-6 text-right">
                            <button type="submit" class="btn text-white p-0 text-center" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;">Bekräfta</button>
                        </div>
                    </div>
                    <div style="height:2.5vw;"></div>

                }

            </div>
        </div>
        <div class="col-auto"></div>
    </div>
</div>