@model Users
<div id="login">
    <div style="height:4vw;"></div>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-auto" style="background-color:#3f4044;border:2px solid #cab290;">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="" method="post">
                        <div style="height:0.5vw;"></div>
                        <div class="row">
                            <img style="margin-right:0.4vw;margin-top:0.3vw;height:1vw;width:1vw;" src="~/Content/Icons/amv-symbol.png" />
                            <h4 class="text-white" style="font-size:1.2vw;">Mer än bara golf</h4>
                        </div>
                        <div style="height:0.5vw;"></div>
                        <div class="form-group text-white" style="font-size:0.8vw;">
                            <label asp-for="UserName" style="font-size:0.6vw;">Användarnamn:</label><br>
                            <input asp-for="UserName" class="form-control " style="font-size:0.6vw;width:10vw;height:1.5vw;">
                            <span asp-validation-for="UserName" class="text-danger"></span>

                        </div>
                        <div class="form-group" style="font-size:0.6vw;">
                            <label asp-for="Password" class="text-white">Lösenord:</label><br>
                            <input asp-for="Password" class="form-control" style="font-size:0.6vw;width:10vw;height:1.5vw;">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn text-white p-0 text-center" onServerClick="On_Click" style="font-size: 0.4vw;width:2.8vw;height:1.2vw;background-color:#0293fc;">Logga in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

