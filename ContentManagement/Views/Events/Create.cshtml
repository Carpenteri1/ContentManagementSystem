@model EventModel 

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-7">

            @using (Html.BeginForm("Create", "Events", FormMethod.Post,
 new { enctype = "multipart/form-data" }))
            {<div style="height:1.5vw;"></div>
                <h4>Skapa nytt event</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group p-0">
                    <label asp-for="EventTitle" class="control-label" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;font-weight:bold;"></label>
                    <input asp-for="EventTitle" class="form-control" style="font-size: 0.5vw; width: 16vw; height: 1.2vw; border: 1px solid lightgray;" />
                    <span asp-validation-for="EventTitle" class="text-danger"></span>
                </div>
                <div class="form-group p-0">
                    <label class="control-label text-left" style="font-size:0.5vw;font-weight:bold;">Länktext: </label>
                    @Html.HiddenFor(model => model.Id)
                    @Html.EditorFor(model => model.LinkTitle, new { HtmlAttributes = new { @class = "form-control", style = "font-size:0.5vw;width:11vw;height:1.2vw;border:1px solid lightgray;" } })
                    <span asp-validation-for="@Model.LinkTitle" class="text-danger"></span>
                </div>
                <div class="form-group p-0">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group" style="text-align:left;font-size:0.5vw;">
                                <label class="d-block" style="font-size:0.5vw;"><b>Splash bild</b></label>
                                @Html.HiddenFor(model => model.EventImageContentModels[0].Id)
                                @Html.HiddenFor(model => model.EventImageContentModels[0].ImgSrc)
                                @Html.HiddenFor(model => model.EventImageContentModels[0].File)
                                @Html.EditorFor(model => model.EventImageContentModels[0].File)
                            </div>
                        </div>
                        <div class="col-6"></div>
                    </div>
                </div>
                <div class="form-group p-0">
                    <label asp-for="EventTextContent" class="control-label text-left" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;font-weight:bold;">Ingress:</label>
                    <textarea asp-for="EventTextContent" class="form-control" style="width:18vw;height:2.8vw;resize:none;font-size:0.5vw;"></textarea>
                    <span asp-validation-for="EventTextContent" class="text-danger"></span>
                </div>
                <div class="form-group p-0">
                    <label asp-for="BodyText" class="control-label text-left" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;font-weight:bold;">Brödtext</label>
                    @Html.TextAreaFor(model => model.BodyText, new { id = "editor2", style = "text-align:left;font-size:0.5vw;height:25vw;" })
                    <span asp-validation-for="BodyText" class="text-danger"></span>
                </div>
                <div class="form-group">

                </div>
                <div style="height:1vw;"></div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="EventStart" class="control-label text-left" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;font-weight:bold;">Eventet startar: </label>
                            <input asp-for="EventStart" class="form-control" style="font-size: 0.5vw; width: 11vw; height: 1.2vw; border: 1px solid lightgray;" />
                            <span asp-validation-for="EventStart" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="EventEnds" class="control-label text-left" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;font-weight:bold;">Eventet slutar</label>
                            <input asp-for="EventEnds" class="form-control" style="font-size: 0.5vw; width: 11vw; height: 1.2vw; border: 1px solid lightgray;" />
                            <span asp-validation-for="EventEnds" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div style="height:1.5vw;"></div>
                <h6 class="text-left">Metainformation</h6>
                <hr />
                <div class="form-group">
                    <div class="row">
                        <div style="height:1vw;"></div>
                        <b style="font-size: 0.5vw;" class="pl-3 pr-1">Publik:</b>  @Html.CheckBoxFor(m => m.IsPublic)
                        <b style="font-size: 0.5vw;" class="pl-3 pr-1">Anmälan:</b>  @Html.CheckBoxFor(m => m.applicationForm)
                    </div>
                    <span asp-validation-for="IsPublic" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <button type="button" class="btn text-white p-0 text-center" onclick="location.href='@Url.Action("Index", "Events")'" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#8c8c8c;">Avbryt</button>
                        </div>
                        <div class="col-6 text-right">
                            <button type="submit" class="btn text-white p-0 text-center" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;">Bekräfta</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-auto"></div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
