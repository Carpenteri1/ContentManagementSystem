@model ContentManagement.Models.EventsModel.EventModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-7">
            <div style="height:1.5vw;"></div>
            <h4>Skapa nytt event</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group p-0">
                    <label asp-for="EventTitle" class="control-label" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;"></label>
                    <input asp-for="EventTitle" class="form-control" style="font-size: 0.5vw; width: 16vw; height: 1.2vw; border: 1px solid lightgray;" />
                    <span asp-validation-for="EventTitle" class="text-danger"></span>
                </div>
                <div class="form-group p-0">
                    <label asp-for="EventTextContent" class="control-label" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;"></label>
                    <textarea asp-for="EventTextContent" class="form-control" style="width:18vw;height:2.8vw;resize:none;font-size:0.5vw;"></textarea>
                    <span asp-validation-for="EventTextContent" class="text-danger"></span>
                </div>
                <div class="row mw-100 mh-100 p-0">
                    <div class="col-6 center">
                        <div class="form-group text-left">
                            <label class="d-block" style="text-align:left;font-size:0.5vw;"></label>
                            @Html.HiddenFor(model => model.Links[0])
                            @Html.EditorFor(model => model.Links[0].LinkTitle, new { HtmlAttributes = new { @class = "form-control", style = "font-size:0.5vw;width:11vw;height:1.2vw;border:1px solid lightgray;" } })
                            <span asp-validation-for="Links[0].LinkTitle" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6 center">
                        <div class="form-group text-left;">
                            <label class="d-block" style="text-align:left;font-size:0.5vw;"></label>
                            @Html.HiddenFor(model => model.Links[0])
                            @Html.EditorFor(model => model.Links[0].Url, new { HtmlAttributes = new { @class = "form-control", style = "font-size:0.5vw;width:11.5vw;height:1.2vw;border:1px solid lightgray;" } })
                            <span asp-validation-for="Links[0].Url" class="text-danger"></span>

                        </div>
                    </div>
                </div>
                <div class="form-group text-left p-0">
                    <label asp-for="EventStart" class="control-label" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;"></label>
                    <input asp-for="EventStart" class="form-control" style="font-size: 0.5vw; width: 11vw; height: 1.2vw; border: 1px solid lightgray;" />
                    <span asp-validation-for="EventStart" class="text-danger"></span>
                </div>
                <div class="form-group text-left p-0">
                    <label asp-for="EventEnds" class="control-label" style="font-size: 0.5vw; width: 11vw; height: 1.2vw;"></label>
                    <input asp-for="EventEnds" class="form-control" style="font-size: 0.5vw; width: 11vw; height: 1.2vw; border: 1px solid lightgray;" />
                    <span asp-validation-for="EventEnds" class="text-danger"></span>
                </div>
                <div style="height:1.5vw;"></div>
                <hr />
                <div class="form-group text-right">
                    <button type="button" class="btn text-white p-0 text-center" onclick="location.href='@Url.Action("Index", "Events")'" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;">Avbryt</button>
                    <button type="submit" class="btn text-white p-0 text-center" style="font-size: 0.4vw;width:3.8vw;height:1.2vw;background-color:#0293fc;">Bekräfta</button>
                </div>
            </form>
        </div>
        <div class="col-auto"></div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
